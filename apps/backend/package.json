{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "tsx --env-file=.env.development --watch src/main.ts",
    "build": "tsc",
    "start": "node --env-file=.env.production dist/main.js",
    "db:generate": "dotenv -e .env.development -- drizzle-kit generate",
    "db:migrate:dev": "dotenv -e .env.development -- drizzle-kit migrate",
    "db:migrate:prod": "dotenv -e .env.production -- drizzle-kit migrate",
    "db:push:dev": "dotenv -e .env.development -- drizzle-kit push",
    "db:push:prod": "dotenv -e .env.production -- drizzle-kit push",
    "gen:feature": "tsx scripts/generate-feature.ts",
    "gen:usecase": "tsx scripts/generate-usecase.ts",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.12.4",
  "dependencies": {
    "@hono/node-server": "^1.17.1",
    "@supabase/supabase-js": "^2.52.0",
    "drizzle-orm": "^0.44.3",
    "hono": "^4.8.5",
    "jose": "^6.0.12",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/node": "^24.0.15",
    "@types/pg": "^8.15.4",
    "@vitest/coverage-v8": "3.2.4",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
